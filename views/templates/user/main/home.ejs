    <button onclick="location.href='/api/user/uin'">Uin코드 생성하기</button>
</body>

<script>
    var clientKey = 'test_ck_D5GePWvyJnrK0W0k6q8gLzN97Eoq'
    var tossPayments = TossPayments(clientKey) // 클라이언트 키로 초기화하기

    const registerCardBtn = document.querySelector('#registerCardBtn');
    registerCardBtn.addEventListener("click", () => {
        tossPayments.requestBillingAuth('카드', { // 결제 수단 파라미터
            // 빌링키 발급 요청을 위한 파라미터
            customerKey: "<%= user.id %>",
            successUrl: 'http://172.30.1.59/user/payments/toss/billing_auth/success',
            failUrl: 'http://172.30.1.59/user/payments/toss/billing_auth/fail',
        })
    })
</script>

