                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <br></br>
                <br></br>
            </div>
        </div>
    </div>
</div>
<!-- This is the modal -->
<div id="updateStore-modal" uk-modal>
